<configSchema>
    <sectionSchema name="system.webServer/httpRequestValidator">
        <attribute name="switchConnections" type="bool" defaultValue="false" />
        <attribute name="switchSession" type="bool" defaultValue="false" />
        <attribute name="switchDomainRedirect" type="bool" defaultValue="false" />
      <element name="monitor">
	      <attribute name="durationMinutes" type="int" defaultValue="5" />
      </element>
      <element name="session">
	      <attribute name="sessionCookieName" type="string" defaultValue="ASP.NET_SessionId" />
      </element>
      <element name="extensions">
	      <attribute name="urlExtensions" type="string" defaultValue="aspx" />
      </element>
      <element name="thresholds">
	      <attribute name="hitsMax" type="int" defaultValue="500" />
        <attribute name="hitsRepeatOffender" type="int" defaultValue="550" />
	      <attribute name="timeMillisecondsMin" type="int" defaultValue="1000" />
      </element>
      <element name="response">
	      <attribute name="responseStatus" type="string" defaultValue="302 Temporary Redirect" />
	      <attribute name="errorPageURL" type="string" defaultValue="/Web2/SorryPage.aspx" />
      </element>
      <element name="eventLog">
	      <attribute name="eventLogName" type="string" defaultValue="Application" />
        <attribute name="eventLogSource" type="string" defaultValue="RequestActionValidator" />
	      <attribute name="eventLogMachine" type="string" defaultValue="." />
        <attribute name="eventLogMessagePrefix" type="string" defaultValue="Atos RequestActionValidator" />		
      </element>
      <element name="connections">
        <attribute name="monitorPeriodSeconds" type="int" defaultValue="60" />
        <attribute name="connectionsTrigger" type="int64" defaultValue="30000" />
        <attribute name="connectionsRestore" type="int64" defaultValue="27000" />
        <attribute name="categoryName" type="string" defaultValue="ASP.NET Apps v2.0.50727" />
        <attribute name="counterName" type="string" defaultValue="Requests/Sec" />
        <attribute name="instanceName" type="string" defaultValue="_LM_W3SVC_1_ROOT_Web2" />
        <attribute name="secondInstanceName" type="string" defaultValue="_LM_W3SVC_3_ROOT" />
        <attribute name="statusFilePath" type="string" defaultValue="D:\TDPortal\" />
        <attribute name="statusFileName" type="string" defaultValue="RequestConnectionValidatorStatus.xml" />
      </element>
      <element name="domainRedirects">
        <attribute name="includeExtensions" type="bool" defaultValue="false" />
        <attribute name="redirectList" type="string" defaultValue="" />
      </element>
      <element name="coolDown">
        <attribute name="fileLocation" type="string" defaultValue="D:\TDPortal\HttpRequestValidator_CoolDown.txt" />
        <attribute name="reportIntervalSeconds" type="int" defaultValue="60" />
        <attribute name="counterName" type="string" defaultValue="Requests Executing" use="required"/>
      </element>
      <element name="messageRedirector">
        <attribute name="fileLocation" type="string" defaultValue="D:\TDPortal\HttpRequestValidator_MessageRedirector.txt" />
        <attribute name="reportIntervalSeconds" type="int" defaultValue="60" />
        <attribute name="counterName" type="string" defaultValue="Requests Executing" use="required"/>
      </element>
    </sectionSchema>
</configSchema>